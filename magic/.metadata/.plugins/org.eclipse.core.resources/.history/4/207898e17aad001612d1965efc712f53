package test;

import static org.junit.Assert.*;

import org.junit.Test;

import pack.Joueurs;
import pack.Plateau;

public class TestJoueurs {

	@Test
	public void test() {
		Plateau.setEnJeu(true); //La plateau EST en jeu
		Joueurs.J1.setVie(0); //Le joueur 1 n'a plus de vie
		Joueurs.J1.Meurt(); //Le joueur DOIT mourir
		
		assertFalse("Fail", Plateau.isEnJeu()); //Le plateau ne doit PAS être en jeu
		
		/**
		 * Si le joueur est vraiment mort, le plateau ne doit PAS être en jeu, donc le test DOIT marcher
		 * 
		 */
	}
	
	@Test
	public void test2(){
		Plateau.setEnJeu(true);
		
		int nbre = 1;
		Joueurs.J1.setNombreCartes(0);
		Joueurs.J1.Pioche();
		
		assertSame("Should be the same", nbre, Joueurs.J1.getNombreCartes());
		
	}

}
